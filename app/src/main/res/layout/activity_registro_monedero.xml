<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroMonederoActivity"
    android:layout_marginHorizontal="150px"
    android:layout_marginVertical="40px"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="250px"
            android:layout_height="170px"
            android:src="@drawable/saving2"
            android:layout_gravity="center">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monedero"
            android:layout_marginLeft="10px"
            android:layout_marginTop="50px"
            android:textStyle="bold"
            android:textSize="30dp">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="18dp"
        android:layout_marginLeft="60px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60px"
        android:hint="Please write your purse name"
        android:background="@drawable/border">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="18dp"
        android:layout_marginLeft="60px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60px">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta"
                android:textSize="20dp"
                android:textStyle="bold">
            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectivo"
                android:textSize="20dp"
                android:textStyle="bold">
            </RadioButton>
        </RadioGroup>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo De Moneda"
        android:textSize="18dp"
        android:layout_marginLeft="60px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60px"
        android:hint="Please write the kind of coin"
        android:background="@drawable/border">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:textSize="18dp"
        android:layout_marginLeft="60px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60px"
        android:hint="Please write the account balance"
        android:background="@drawable/border">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entidad Financiera"
        android:textSize="18dp"
        android:layout_marginLeft="60px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60px"
        android:hint="Please write your bank"
        android:background="@drawable/border"
        android:visibility="invisible">
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÂ° Tarjeta"
        android:textSize="18dp"
        android:layout_marginLeft="60px"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible">
    </TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60px"
        android:hint="Please write your card number"
        android:background="@drawable/border"
        android:visibility="invisible">
    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="60px"
        android:backgroundTint="#02345E"
        android:text="Enviar">
    </Button>

</LinearLayout>